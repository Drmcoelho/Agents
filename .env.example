# Agents Course - Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# AI Model Backends
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_ORG_ID=

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-opus-20240229

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-pro

# Default Backend (openai|anthropic|google)
DEFAULT_BACKEND=openai

# =============================================================================
# Model Context Protocol (MCP)
# =============================================================================

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
MCP_LOCAL_MODE=true

# =============================================================================
# Application Configuration
# =============================================================================

# Debug Mode
DEBUG=false

# Log Level (DEBUG|INFO|WARNING|ERROR)
LOG_LEVEL=INFO

# Course Progress
PROGRESS_FILE=.passport.json

# =============================================================================
# Capstone Projects Configuration
# =============================================================================

# Medical PDF Reader
MEDICAL_PDF_PATH=./data/medical_docs/

# B2C Customer Service
B2C_SERVICE_PORT=3000
B2C_CHATKIT_THEME=light

# =============================================================================
# Metrics and Guardrails
# =============================================================================

# Enable Metrics Collection
ENABLE_METRICS=true
METRICS_BACKEND=local

# Guardrails Configuration
ENABLE_GUARDRAILS=true
MAX_TOKENS=4096
TEMPERATURE=0.7
GUARDRAILS_PII_DETECTION=true

# =============================================================================
# Testing Configuration
# =============================================================================

# Test Mode
TEST_MODE=false
MOCK_API_CALLS=false
